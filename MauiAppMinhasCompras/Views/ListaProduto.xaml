<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="ListaProduto">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Testes CRUD SQLite" FontAttributes="Bold" FontSize="20"/>
            <Button Text="Inserir Produto" Clicked="OnInserir"/>
            <Button Text="Listar Produtos" Clicked="OnListar"/>
            <Button Text="Atualizar Primeiro Produto" Clicked="OnAtualizar"/>
            <Button Text="Excluir Primeiro Produto" Clicked="OnExcluir"/>
            <Label x:Name="ResultadoLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>